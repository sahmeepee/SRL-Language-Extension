  "scopeName": "source.srl",
  "patterns": [
    {
      "info": "SRL Syntax in << >>. End tag ensures the SRL pattern is not broken with <<someBuildText<STU_CODE>>>",
      "begin": "<<",
      "end": ">>(?!>)",
      "beginCaptures":{
        "0": {
          "name": "punctuation.definition.tag.begin.srl"
        }
      },
      "endCaptures":{
        "0": {
          "name": "punctuation.definition.tag.end.srl"
        }
      },
      "name": "source.srl",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#variables"
        },
        {
