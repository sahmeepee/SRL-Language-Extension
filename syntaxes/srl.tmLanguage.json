        },
        {
          "include": "#registers"
        },
        {
          "include": "#SLPs"
        },
        {
          "include": "#formats"
        },
        {
          "include": "#andPParamsIn"
        },
        {
          "include": "#andPParamsOut"
        }
      ]
    },
    {
      "info": "Conditional syntax in {{ }}. Brace matching and colouring comes from the language-configuration.json",
      "begin": "{{",
      "end": "}}",
      "beginCaptures":{
        "0": {
          "name": "punctuation.definition.block.srl"
        }
      },
      "endCaptures":{
        "0": {
          "name": "punctuation.definition.block.srl"
        }
      },
      "name": "source.srl",
